<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.upb.taskyo.CreditosActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewCrearTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haga click en el sÃ­mbolo '+' para CREAR una tarea"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textViewDesliceIzquierda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deslice una tarea hacia la izquierda para ELIMINARLA"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textViewCrearTarea"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textViewDesliceDerecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deslice una tarea hacia la derecha para EDITARLA"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textViewDesliceIzquierda"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/buttonInicioTutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:layout_below="@id/textViewDesliceDerecha"
            android:layout_centerHorizontal="true"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="32dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>